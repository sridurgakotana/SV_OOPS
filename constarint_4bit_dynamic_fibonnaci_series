// fibonacci series
class sample;
  rand bit [3:0]a[];
  int i;
  constraint c1{a.size == 10;
                foreach(a[i])
                  if(i==0) a[i]==0;
                else if(i==1) a[i]==1;
                else a[i]==a[i-2]+a[i-1]; 
                   
                    }
endclass

module tb;
  sample s;
  initial begin
    s=new();
         assert(s.randomize());
      foreach(s.a[i])
        $write("%0h ",s.a[i]);
    end
endmodule

OUTPUT:

  0 1 1 2 3 5 8 d 5 2 
  
  
